<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".productDetails">

    <TextView
            android:text="TextView"
            android:layout_width="279dp"
            android:layout_height="52dp" tools:layout_editor_absoluteY="273dp"
            tools:layout_editor_absoluteX="66dp" android:id="@+id/pd_pid" android:textColor="@android:color/black"
            android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="279dp"
            android:layout_height="52dp"
            tools:layout_editor_absoluteX="78dp" android:id="@+id/pd_pname" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/pd_pid"/>
    <ImageView
            android:layout_width="127dp"
            android:layout_height="139dp" app:srcCompat="@android:drawable/alert_dark_frame"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>