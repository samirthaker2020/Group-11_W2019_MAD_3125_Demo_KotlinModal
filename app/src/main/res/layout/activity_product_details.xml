<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".productDetails">

    <TextView
            android:text="productid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pd_pid" android:textColor="@android:color/black"
            android:textSize="18sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pd_pname" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pd_pid" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="bold" android:textColor="@android:color/black" android:textSize="18sp"
            android:gravity="center_vertical"/>
    <TextView
            android:text="price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pd_pname" android:gravity="center_vertical"
            android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>